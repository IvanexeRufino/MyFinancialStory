<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintTop_toTopOf="parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
            android:id="@+id/add_expenses_label"
            android:layout_width="139dp"
            android:layout_height="35dp"
            android:layout_marginTop="228dp"
            android:text="@string/add_expenses_label"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:layout_marginStart="136dp" />

    <EditText
            android:id="@+id/add_expenses_input"
            android:layout_width="162dp"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            app:layout_constraintLeft_toLeftOf="parent"
            android:autofillHints=""
            android:hint="@string/expense_value_hint"
            app:layout_constraintTop_toBottomOf="@+id/add_expenses_label"
            android:layout_marginTop="24dp"
            android:layout_marginStart="124dp" />

    <Button
            android:id="@+id/add_expenses_button"
            android:layout_width="289dp"
            android:layout_height="47dp"
            android:text="@string/add_expenses_button"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="520dp"
            android:layout_marginStart="72dp" />

</androidx.constraintlayout.widget.ConstraintLayout>